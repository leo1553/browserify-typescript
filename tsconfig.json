{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "moduleResolution": "Node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": [
      "./src"
    ]
  },
  "include": [
    "src"
  ]
}